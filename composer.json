{
    "name": "hxphp/framework",
    "description": "HXPHP - O seu primeiro framework.",
    "type": "library",
    "homepage": "http://www.hxphp.com.br/",
    "keywords": ["framework", "hxphp"],
    "license": "MIT",
    "require": {
        "php": ">=7.0.0",
        "symfony/http-foundation": "^4.0",
        "php-activerecord/php-activerecord": "*",
        "filp/whoops": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "mockery/mockery": "^1.0",
        "fzaninotto/faker": "^1.7"
    },
    "authors": [
        {
            "name": "Bruno Campos Santos",
            "email": "bruno@plug.ag",
            "role": "Developer"
        },
        {
            "name": "Gilgl√©cio Santos",
            "email": "gilglecio_765@hotmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/hxphp/framework/issues",
        "wiki": "https://github.com/hxphp/docs"
    },
    "autoload": {
        "psr-4": {
            "HXPHP\\": "src/HXPHP"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/HXPHP"
        }
    },
    "config": {
        "discard-changes": "stash",
        "optimize-autoloader": true
    }
}
